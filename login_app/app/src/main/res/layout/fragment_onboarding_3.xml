<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.OnboardingFragment_1"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/trungnam" />
    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tăng Hồ Trung Nam"
        android:textColor="@color/farmstay"
        android:textSize="30sp"/>

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chủ Tịch Farmstay"
        android:textColor="@color/black"
        android:textSize="22sp"/>

        <Button
            android:id="@+id/btn_getstart"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/farmstay"
            android:text="get start"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button"/>

</LinearLayout>